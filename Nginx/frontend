server {
    listen 80;
    listen [::]:80;
    server_name elderly.space www.elderly.space;

    root /var/www/elderly-frontend;
    index index.html index.htm;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg)$ {
        try_files $uri =404;
        expires max;
        access_log off;
    }
}
